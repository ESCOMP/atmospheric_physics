<entry_id_pg version="2.0">

  <!-- common namelist settings for gravity wave schemes -->
  <entry id="pgwv">
    <type>integer</type>
    <category>gw_drag</category>
    <group>gw_drag_nl</group>
    <standard_name>mid_gravity_wave_band_spectrum_dimension_tbd</standard_name>
    <units>1</units>
    <desc>
      Gravity wave spectrum dimension (wave numbers are from -pgwv to pgwv).
    </desc>
    <values>
      <value>32</value>
      <!-- waccm: 18 -->
    </values>
  </entry>

  <entry id="gw_dc">
    <type>real</type>
    <category>gw_drag</category>
    <group>gw_drag_nl</group>
    <standard_name>delta_between_nearest_phase_speeds_in_the_mid_gravity_wave_band_tbd</standard_name>
    <units>m s-1</units>
    <desc>
      Width of speed bins (delta c) for gravity wave spectrum (reference wave
      speeds are from -pgwv*dc to pgwv*dc).
    </desc>
    <values>
      <value>2.5D0</value>
    </values>
  </entry>

  <entry id="pgwv_long">
    <type>integer</type>
    <category>gw_drag</category>
    <group>gw_drag_nl</group>
    <standard_name>long_gravity_wave_band_spectrum_dimension_tbd</standard_name>
    <units>1</units>
    <desc>
      Gravity wave spectrum dimension, long wavelength (wave numbers are from -pgwv to pgwv).
    </desc>
    <values>
      <value>10</value>
      <!-- 0 for simple physics -->
    </values>
  </entry>

  <entry id="gw_dc_long">
    <type>real</type>
    <category>gw_drag</category>
    <group>gw_drag_nl</group>
    <standard_name>delta_between_nearest_phase_speeds_in_the_long_gravity_wave_band_tbd</standard_name>
    <units>m s-1</units>
    <desc>
      Width of speed bins (delta c) for gravity wave spectrum
      (reference wave speeds are from -pgwv_long*dc_long to pgwv_long*dc_long).
    </desc>
    <values>
      <value>2.0D0</value>
      <!-- 0 for simple physics -->
    </values>
  </entry>

  <entry id="gw_top_taper">
    <type>logical</type>
    <category>gw_drag</category>
    <group>gw_drag_nl</group>
    <standard_name>taper_gravity_wave_drag_at_model_top</standard_name>
    <units>flag</units>
    <desc>
      Whether or not to apply tapering at the top of the model (above 0.6E-02 Pa)
      to reduce undesired effects of gravity waves in the thermosphere/ionosphere.
    </desc>
    <values>
      <value>.false.</value>
      <!-- true for WACCM-X. -->
    </values>
  </entry>

  <entry id="tau_0_ubc">
    <type>logical</type>
    <category>gw_drag</category>
    <group>gw_drag_nl</group>
    <standard_name>force_zero_stress_at_top_of_atmosphere_due_to_gravity_wave_drag_tbd</standard_name>
    <units>flag</units>
    <desc>
      Force the stress due to gravity waves to be zero at the top of the model.
      In the low-top model, this helps to conserve momentum and produce a QBO.
    </desc>
    <values>
      <value>.true.</value>
    </values>
  </entry>

  <entry id="gw_prndl">
    <type>real</type>
    <category>gw_drag</category>
    <group>gw_drag_nl</group>
    <standard_name>inverse_prandtl_number_for_diffusion_in_gravity_wave_drag_tbd</standard_name>
    <units>1</units>
    <desc>
      Inverse Prandtl number used in gravity wave diffusion.
    </desc>
    <values>
      <value>0.25D0</value>
    </values>
  </entry>

  <entry id="gw_qbo_hdepth_scaling">
    <type>real</type>
    <category>gw_drag</category>
    <group>gw_drag_nl</group>
    <standard_name>scaling_factor_for_heating_depth_in_gravity_waves_from_convection_tbd</standard_name>
    <units>1</units>
    <desc>
      Scaling factor for heating depth in gravity waves from convection.  If less than 1.0
      this acts as an effective reduction of the gravity wave phase speeds needed to drive
      the QBO.
    </desc>
    <values>
      <value>1.0D0</value>
    </values>
  </entry>

