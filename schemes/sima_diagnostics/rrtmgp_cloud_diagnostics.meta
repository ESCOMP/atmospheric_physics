  units = flag
  type = logical
  dimensions = ()
  intent = in
[ graupel_in_rad ]
  standard_name = do_calculate_radiative_effect_of_graupel
  units = flag
  type = logical
  dimensions = ()
  intent = in
[ errmsg ]
  standard_name = ccpp_error_message
  units = none
  type = character | kind = len=512
  dimensions = ()
  intent = out
[ errflg ]
  standard_name = ccpp_error_code
  units = 1
  type = integer
  dimensions = ()
  intent = out

