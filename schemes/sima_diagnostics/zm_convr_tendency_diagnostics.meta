[ccpp-table-properties]
  name = zm_convr_tendency_diagnostics
  type = scheme

[ccpp-arg-table]
  name  = zm_convr_tendency_diagnostics_init
  type  = scheme
[ errmsg ]
  standard_name = ccpp_error_message
  long_name = Error message for error handling in CCPP
  units = none
  type = character | kind = len=512
  dimensions = ()
  intent = out
[ errflg ]
  standard_name = ccpp_error_code
  long_name = Error flag for error handling in CCPP
  units = 1
  type = integer
  dimensions = ()
  intent = out

[ccpp-arg-table]
  name  = zm_convr_tendency_diagnostics_run
  type  = scheme
[ ncol ]
  standard_name = horizontal_loop_extent
  units = count
  type = integer
  dimensions = ()
  intent = in
[ pver ]
  standard_name = vertical_layer_dimension
  units = count
  type = integer
  dimensions = ()
  intent = in
[ cpair ]
  standard_name = specific_heat_of_dry_air_at_constant_pressure
  units = J kg-1 K-1
  type = real | kind = kind_phys
  dimensions = ()
  intent = in
[ heat ]
  standard_name = tendency_of_dry_air_enthalpy_at_constant_pressure
  units = J kg-1 s-1
  type = real | kind = kind_phys
  dimensions = (horizontal_loop_extent,vertical_layer_dimension)
  intent = in
[ qtnd ]
  standard_name = tendency_of_water_vapor_mixing_ratio_wrt_moist_air_and_condensed_water
  units = kg kg-1 s-1
  type = real | kind = kind_phys
  dimensions = (horizontal_loop_extent,vertical_layer_dimension)
  intent = in
[ errmsg ]
  standard_name = ccpp_error_message
  long_name = Error message for error handling in CCPP
  units = none
  type = character | kind = len=512
  dimensions = ()
  intent = out
[ errflg ]
  standard_name = ccpp_error_code
  long_name = Error flag for error handling in CCPP
  units = 1
  type = integer
  dimensions = ()
  intent = out

